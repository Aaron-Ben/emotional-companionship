# ============================================
# API Keys
# ============================================
# OpenRouter API Key (必需 - 用于 LLM 和 Embedding)
OPENROUTER_API_KEY=your-openrouter-api-key

# ============================================
# API Endpoints
# ============================================
# OpenRouter API URL
API_URL=https://openrouter.ai/api/v1

# ============================================
# LLM Configuration
# ============================================
# OpenRouter 模型名称 (用于对话)
OPENROUTER_MODEL=deepseek/deepseek-v3.2

# ============================================
# Embedding Configuration
# ============================================
# Embedding 模型名称 (用于向量生成)
EmbeddingModel=baai/bge-m3

# Embedding 最大 Token 数
WHITELIST_EMBEDDING_MODEL_MAX_TOKEN=8000

# Embedding 批次最大数量
WHITELIST_EMBEDDING_MODEL_LIST=10

# 向量化并发数
TAG_VECTORIZE_CONCURRENCY=5

# ============================================
# Database Configuration
# ============================================
# 数据库 URL (默认使用 SQLite)
DATABASE_URL=sqlite:///./emotional_companionship.db

# ============================================
# Timezone Configuration
# ============================================
# 默认时区
DEFAULT_TIMEZONE=Asia/Shanghai
